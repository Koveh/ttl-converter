@prefix : <http://example.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:Einstein a :Person ;
    :name "Albert Einstein" ;
    :married :Marriage1, :Marriage2 .

:Maric a :Person ;
    :name "Mileva Marić" .

:Marriage1 a :Marriage ;
    :spouse :Maric ;
    :order 1 ;
    :start "1903-01-06"^^xsd:date ;
    :end "1919-02-14"^^xsd:date .

:Marriage2 a :Marriage ;
    :spouse :Maric ;
    :order 2 ;
    :start "1925-01-01"^^xsd:date ;
    :end "1930-12-31"^^xsd:date .
